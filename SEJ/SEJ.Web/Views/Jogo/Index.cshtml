@model IList<SEJ.Entidades.Jogo>
@{
    ViewBag.Title = "Index";
}

<h2>Jogos</h2>
<br />
<br />
<button class="btn btn-primary" id="btnAdicionar">Adicionar</button>
<br />
<br />

<table class="table table-striped" id="tabelaJogos">
    <thead>
        <tr>
            <td>
                Descrição
            </td>
            <td>
                Distribuidora
            </td>
            <td>
                Valor
            </td>
            <td>Ações</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var jogo in Model)
            {
                <tr>
                    <td class="hidden">@jogo.Id</td>
                    <td>@jogo.Descricao</td>
                    <td>@jogo.Distribuidora</td>
                    <td>@jogo.Valor</td>
                    <td>
                        <a class="btn btn-default btnAlterar"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a class="btn btn-default btnExcluir"><span class="glyphicon glyphicon-remove"></span></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>SEM REGISTROS</td>
            </tr>
        }

    </tbody>
</table>

@Scripts.Render("~/bundles/jquery")

<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootbox.min.js"></script>
<script type="text/javascript" src="~/Scripts/Jogo/index.js"></script>
