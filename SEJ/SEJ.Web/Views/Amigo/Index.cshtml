@model IList<SEJ.Entidades.Amigo>
@{
    ViewBag.Title = "Index";
}

<h2>Amigos</h2>
<br />
<br />
<button class="btn btn-primary" id="btnAdicionar">Adicionar</button>
<br />
<br />
<table class="table table-striped" id="tabelaAmigos">
    <thead>
        <tr>
            <td>
                Id
            </td>
            <td>
                Nome
            </td>
            <td>
                Ações
            </td>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count > 0)
        {
            foreach (var amigo in Model)
            {
                <tr>
                    <td>
                        @amigo.Id
                    </td>
                    <td>
                        @amigo.Nome
                    </td>
                    <td>
                        <a class="btn btn-default btnAlterar"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a class="btn btn-default btnExcluir"><span class="glyphicon glyphicon-remove"></span></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>SEM REGISTROS</td>
            </tr>
        }

    </tbody>
</table>
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootbox.min.js"></script>
<script type="text/javascript" src="~/Scripts/Amigo/index.js"></script>
